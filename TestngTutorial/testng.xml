<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Loan Department">
	<test name="Personal Loan">
		<classes>
			<class name="Test.Day1">
			<!-- 
   ** Jb hum include likte h tho kaival vo hi testcase(Method) include hota h jo hum include mai likhte h
   ** Bakki Sare TestCase(Method) define in that class get ignored or not run
				-->
				<methods>
					<include name="TestTwo" /> 
				</methods>
			</class>
			<class name="Test.Day2" />
			<class name="Test.Day4" />
		</classes>
	</test>


 
	<test name="Car Loan">
		<classes>
			<class name="Test.Day3">

				<!-- 
				 ** Agr Humko kisi bhi Testcase ko run nahi krna h tho hum usko exclude kr dege 
			     ** By Writing it in Methods of that class like here
			     ** kyuki hum apne test case ko different method mai define kr rahe
			-->
				<methods>
		<!--   *****  To stop single TestCase <exclude name="Mobilelogincarloan" /> 
			   *****  To stop multiple testCase which start from Mobile we write like below		     
					
					 -->
                    <exclude name="Mobile.*"/>
				</methods>
			</class>
		</classes>


	</test>

</suite> 
